# =============================================================================
# WAH4H Backend - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_NAME=wah4h_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# WAH4PC Gateway Integration
# -----------------------------------------------------------------------------
# Base URL of the WAH4PC Gateway (production endpoint)
WAH4PC_GATEWAY_URL=https://wah4pc.echosphere.cfd

# Your API Key for authenticating requests to the gateway
# Format: wah_your-api-key-here
# Obtain from: Gateway administrator after provider registration
WAH4PC_API_KEY=wah_your-api-key

# Your unique Provider ID (UUID format)
# Obtain from: Gateway administrator after provider registration
WAH4PC_PROVIDER_ID=your-provider-uuid

# Gateway Authentication Key (for validating incoming webhook requests)
# This is a secret key YOU generate and provide to the gateway admin
# They will use it to authenticate when calling your webhooks
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
GATEWAY_AUTH_KEY=your-gateway-auth-key

# -----------------------------------------------------------------------------
# CORS Configuration (for frontend development)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Public URL Configuration (for webhook callbacks)
# -----------------------------------------------------------------------------
# Your publicly accessible base URL for webhook endpoints
# Required for production deployment
# For local testing, use ngrok: https://ngrok.com
# Example: https://your-app.ngrok.io or https://api.yourorganization.com
PUBLIC_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. WAH4PC_API_KEY and WAH4PC_PROVIDER_ID are obtained after registration
# 2. GATEWAY_AUTH_KEY is generated by YOU and shared with gateway admin
# 3. PUBLIC_BASE_URL must be HTTPS in production (gateway requirement)
# 4. Provider list endpoint is public and doesn't require authentication
# 5. All webhook endpoints use GATEWAY_AUTH_KEY for authentication
